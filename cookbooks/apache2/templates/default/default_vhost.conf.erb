<VirtualHost <%= @listen %>>

  <%= @description %>

<% if @basic_auth %>
  <Location />
  <%= @basic_auth %>
  </Location>
<% end %>

  DocumentRoot <%= @config[:document_root] %>
<% if @options %>

  <Directory  <%= @config[:document_root] %>>
    Options <%= @options.join(' ') %>
  </Directory>

<% end %>

<% if @config[:custom_config] %>
<% @config[:custom_config].each do |l| %>
<%= l %>
<% end %>
<% end %>

</VirtualHost>