#!/bin/bash -e

### BEGIN INIT INFO
# Provides: graphite
# Required-Start:
# Required-Stop:
# Default-Start:  2 3 4 5
# Default-Stop:
# Short-Description: graphite
### END INIT INFO

cd <%= @graphite_directory %>

<% if @whisper_dev_shm_size %>
mkdir -p /dev/shm/whisper
chown -R www-data /dev/shm/whisper
mount -o remount,size=<%= @whisper_dev_shm_size %> /dev/shm
<% end %>

sudo -u www-data ./bin/carbon-cache.py $*

if [ "$1" = "stop" ]; then
 count=0
 while true; do
  if [ "$count" = "10" ]; then
    echo "Unable to stop carbon"
    exit 2
  fi
  if [ -f "<%= @graphite_directory %>/storage/carbon-cache-a.pid" ]; then
   pid=`cat <%= @graphite_directory %>/storage/carbon-cache-a.pid`
   if [ -d "/proc/$pid" ]; then
     echo "."
     sleep 1
   else
     break
   fi
  else
   break
  fi
  count=$(($count + 1))
 done
fi