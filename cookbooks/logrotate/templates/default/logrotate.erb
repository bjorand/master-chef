<%= @files.join(' ') %> {
	<%= @frequency %>
	missingok
	rotate <%= @rotate %>
	compress
	delaycompress
	notifempty
	<% if @copytruncate %>
	copytruncate
	<% end %>
	<% if @nocreate %>
	nocreate
	<% else %>
	create <%= @mode %> <%= @user %> <%= @group %>
	<% end %>
	<% if @sharedscripts %>
	sharedscripts
	<% end %>
	<% if @post_rotate %>
	postrotate
		<%= @post_rotate %>
	endscript
	<% end %>
	<% if @su %>
	su root root
	<% end %>
}
