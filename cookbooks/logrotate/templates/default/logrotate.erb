<%= @files.join(' ') %> {
	<%= @frequency %>
	missingok
	rotate <%= @rotate %>
	compress
	delaycompress
	notifempty
	<% if @copytruncate %>
	copytruncate
	<% end %>
	create <%= @mode %> <%= @user %> <%= @group %>
  <% if @sharedscripts %>
    sharedscripts
  <% end %>
	<% if @post_rotate %>
	postrotate
	  <%= @post_rotate %>
	endscript
	<% end %>
	<% if @su %>
	su root root
	<% end %>
}
